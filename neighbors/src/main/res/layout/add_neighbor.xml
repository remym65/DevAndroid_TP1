<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageicon"
        android:layout_width="187dp"
        android:layout_height="108dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/imageLyt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="354dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageicon" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/image_input"
        android:layout_width="@id/imageLyt"
        android:layout_height="@id/imageLyt"
        app:layout_constraintTop_toTopOf="@id/imageLyt"
        app:layout_constraintBottom_toBottomOf="@id/imageLyt"
        app:layout_constraintStart_toStartOf="@id/imageLyt"
        app:layout_constraintEnd_toEndOf="@id/imageLyt"
        android:ems="10"
        android:hint="@string/image_text"
        android:inputType="text" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nomLyt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="354dp"
        android:layout_height="51dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLyt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nom_input"
        android:layout_width="@id/nomLyt"
        android:layout_height="@id/nomLyt"
        app:layout_constraintTop_toTopOf="@id/nomLyt"
        app:layout_constraintBottom_toBottomOf="@id/nomLyt"
        app:layout_constraintStart_toStartOf="@id/nomLyt"
        app:layout_constraintEnd_toEndOf="@id/nomLyt"
        android:ems="10"
        android:hint="@string/hint_nom"
        android:inputType="text" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addressLyt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="354dp"
        android:layout_height="51dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomLyt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/address"
        android:layout_width="@id/addressLyt"
        android:layout_height="@id/addressLyt"
        app:layout_constraintTop_toTopOf="@id/addressLyt"
        app:layout_constraintBottom_toBottomOf="@id/addressLyt"
        app:layout_constraintStart_toStartOf="@id/addressLyt"
        app:layout_constraintEnd_toEndOf="@id/addressLyt"
        android:ems="10"
        android:hint="@string/hint_address"
        android:inputType="text" />


</androidx.constraintlayout.widget.ConstraintLayout>